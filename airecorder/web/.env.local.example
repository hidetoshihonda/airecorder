# Azure AI Voice Recorder - Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# Azure AD B2C Configuration
# ===========================================
NEXT_PUBLIC_AZURE_AD_B2C_TENANT_NAME=your-tenant-name
NEXT_PUBLIC_AZURE_AD_B2C_CLIENT_ID=your-client-id
NEXT_PUBLIC_AZURE_AD_B2C_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_AZURE_AD_B2C_POLICY_SIGN_UP_SIGN_IN=B2C_1_signupsignin
NEXT_PUBLIC_AZURE_AD_B2C_POLICY_RESET_PASSWORD=B2C_1_passwordreset
NEXT_PUBLIC_AZURE_AD_B2C_POLICY_EDIT_PROFILE=B2C_1_editprofile

# ===========================================
# Azure Speech Services
# ===========================================
NEXT_PUBLIC_AZURE_SPEECH_KEY=your-speech-key
NEXT_PUBLIC_AZURE_SPEECH_REGION=japaneast

# ===========================================
# Azure Translator
# ===========================================
NEXT_PUBLIC_AZURE_TRANSLATOR_KEY=your-translator-key
NEXT_PUBLIC_AZURE_TRANSLATOR_REGION=global
NEXT_PUBLIC_AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# ===========================================
# Azure OpenAI
# ===========================================
NEXT_PUBLIC_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
NEXT_PUBLIC_AZURE_OPENAI_KEY=your-openai-key
NEXT_PUBLIC_AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# ===========================================
# Azure Blob Storage
# ===========================================
NEXT_PUBLIC_AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
NEXT_PUBLIC_AZURE_STORAGE_CONTAINER_NAME=recordings

# ===========================================
# Azure Functions API
# ===========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:7071/api

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_APP_NAME=AI Voice Recorder
NEXT_PUBLIC_DEFAULT_LANGUAGE=ja-JP
